{
  "version": 2,
  "builds": [
    {
      "src": "*.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python@3.9",
        "maxLambdaSize": "50mb",  // Diperbesar untuk model YOLO
        "includeFiles": [
          "models/**",
          "static/**",
          "templates/**",
          "utils/**"
        ]
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "app.py",
      "methods": ["GET", "POST"]
    }
  ]
}
