{
  "version": 2,
  "builds": [
    {
      "src": "*.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python@3.9",
        "maxLambdaSize": "300mb",  
        "externalNodeModules": ["ultralytics"]
        "includeFiles": [
          "models/**",
          "static/**",
          "templates/**",
          "utils/**"
          "instance/**"
        ]
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ]
}
